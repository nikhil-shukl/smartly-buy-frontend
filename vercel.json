{
  "cleanUrls": true,
  "redirects": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "techtrendydeals.com" }],
      "destination": "https://www.techtrendydeals.com/:path*",
      "permanent": true
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/(.*\\.js)",     "dest": "/$1" },
    { "src": "/(.*\\.css)",    "dest": "/$1" },
    { "src": "/(.*\\.png)",    "dest": "/$1" },
    { "src": "/(.*\\.ico)",    "dest": "/$1" },
    { "src": "/(.*\\.svg)",    "dest": "/$1" },
    { "src": "/(.*)",          "dest": "/index.html", "status": 200 }
  ]
}

